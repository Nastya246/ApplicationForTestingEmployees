@model IEnumerable<WebApplicationForTest.Models.Вопросы>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Тест "@ViewBag.НазваниеТеста"</h2> <br /><br />


<form method="post" action="~/Результат_теста/Index">
    <table class="table">
        <tr>

            <th>Выберите верный ответ<br /><br /></th>



        </tr>

        @foreach (var item in Model)
        {
            if (item.Тип_ответа.Replace(" ", "") != "Соотношение")
            {
            <tr>
                <td>
                    <br /><br /> @Html.DisplayFor(m => item.Текст_вопроса)<br /><br />
                </td>

            </tr>
            }
            else
            {

            }

            foreach (var itemO in item.Ответы)
            {
                if (item.Тип_ответа.Replace(" ", "") == "Выбор")
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(m => itemO.Текст_ответа)
                        </td>
                        <td>

                            @Html.RadioButton((item.id_вопроса).ToString(), itemO.Текст_ответа)
                        </td>
                    </tr>
                }
                else if (item.Тип_ответа.Replace(" ", "") == "Ввод")
                {

                    <tr>
                        <td><p>Введите ответ без пробелов и знаков: </p> </td>
                        <td><input type="text" name=@item.id_вопроса /></td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                            <!-- Html.DisplayFor(m => itemO.Текст_ответа) -->
                        </td>
    <td>

        <!-- Html.DropDownList("Текст_ответа", item.Ответы.Where(c => c.Вопросы.Номер_подвопроса == 1) as SelectList, "--Выберите ответ--") -->
                        </td>
                    </tr>
                }

            }


        }

        <tr><td><br /><br /><input type="submit" value="Отправить" /> </td><td></td></tr>

    </table>
</form>