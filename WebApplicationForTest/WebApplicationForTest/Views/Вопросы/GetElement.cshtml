<div class="c">
    <div class="form-group">
        @Html.Label("Варианты понятий (через запятую, только для типа \"Соотношение\"):")
        <div class="col-md-10">
            @if (@ViewBag.Def == true)
            {
                <input type="text" id="def" name="def" size="150"/>
            }
            else
            {
                <input type="text" id="def" name="def" size="150" disabled="disabled" />
            }
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Варианты ответов (через запятую):")
        <div class="col-md-10">
            @if (@ViewBag.Variant == true)
            {
                <input type="text" id="variant" name="variant" size="150"/>
            }
            else
            {
                <input type="text" id="variant" name="variant" disabled="disabled" size="150"/>
            }
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Правильный ответ/ответы (через запятую):")
        <div class="col-md-10">
            @if (@ViewBag.Correct == true)
            {
                <input type="text" id="correct" name="correct" size="150"/>
            }
            else
            {
                <input type="text" id="correct" name="correct" disabled="disabled" size="150"/>
            }
        </div>
    </div>
</div>
