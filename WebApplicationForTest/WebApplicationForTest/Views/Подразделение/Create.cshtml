@model WebApplicationForTest.Models.Подразделение

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><big><big>Добавить подразделение</big></big><br /><br /><br /></h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <big>
                @Html.Label("Введите название подразделения")</big>
    <br /><br />
    <div class="col-md-10">
        @Html.EditorFor(model => model.Название_подразделения, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Название_подразделения, "", new { @class = "text-danger" })
    </div>
</div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br /><br />
                <input type="submit" value="Добавить" class="btn btn-default" /><br /><br />
               
            </div>
        </div>
    </div>
}

    <div>
      <br /><br /> @Html.ActionLink("Вернуться к списку подразделений", "Index")
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
