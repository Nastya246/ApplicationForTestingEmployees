@model IEnumerable<WebApplicationForTest.Models.Тесты>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Доступные темы для тестирования из раздела "@ViewBag.НазваниеРаздела"</h2> <br /><br />


<form method="post" action="~/Вопросы/Index">
    <table class="table">
        <tr>

            <th>
                Название темы<br />
                <br />
            </th>


            <th>Число вопросов<br /><br /></th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Название_темы_теста)<br />
                    <br />
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.Количество_вопросов)<br />
                    <br />
                </td>
                <td>
                    @Html.RadioButtonFor(modelItem => item.Название_темы_теста, item.Название_темы_теста)<br /><br />
                </td>

            </tr>
        }
        
        <tr><td>
    <br />
    <br /><input type="submit" value="Начать" />
</td><td></td></tr>

    </table>
</form>