@model WebApplicationForTest.Models.Должность

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><big><big>Добавить должность</big></big><br /><br /><br /></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <big>
                @Html.Label("Название должности")
            </big>
            <br /><br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Название_должности, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Название_должности, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" /><br /><br />
            </div>
        </div>
    </div>
}

<div>
    <br /><br />   @Html.ActionLink("Вернуться к списку должностей", "Index")
</div>
<form method="post" action="~/Home/Menu">
    <input type="hidden" value="admin" name="Login" />
    <input type="hidden" value="admin12345" name="Password" />
    <input type="submit" value="В меню" />

</form>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
