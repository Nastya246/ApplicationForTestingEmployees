@model IEnumerable<WebApplicationForTest.Models.Подразделение>

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.User != "otchet")
{
    <h2><big>Список подразделений</big><br /><br /><br /></h2>

    <p>
        @Html.ActionLink("Добавить подразделение", "Create")
    </p> <br /><br />
               <table class="table">


                   @foreach (var item in Model)
                   {
                       <tr>
                           <td>
                               <big>   <big> @Html.DisplayFor(modelItem => item.Название_подразделения)</big></big>
                               @Html.ActionLink("Изменить", "Edit", new { id = item.Id_подразделения }) |
                               @Html.ActionLink("Детали", "Details", new { id = item.Id_подразделения }) |
                               @Html.ActionLink("Удалить", "Delete", new { id = item.Id_подразделения })
                           </td>
                       </tr>
                       foreach (var itemPosition in ViewBag.Positions)
                       {
                           foreach (var itemP in item.ДолжностьПодразделение)
                           {
                               if (itemPosition.Id_должности == itemP.id_должности)
                               {
                                   <tr>
                                       <td>

                                           @itemPosition.Название_должности

                                       </td>
                                   </tr>
                               }
                           }

                       }

                   }


               </table>
    <form method="post" action="~/Home/Menu">
        <input type="hidden" value="admin" name="Login" />
        <input type="hidden" value="admin12345" name="Password" />
        <input type="submit" value="В меню" />

    </form>
}
else
{
    <h2><big>Выбор подразделения для отчета</big><br /><br /><br /></h2>

    <form method="post" action="~/Отчеты/Index">
        <table class="table">


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <big> @Html.DisplayFor(modelItem => item.Название_подразделения)</big>
                    </td>
                    <td>
                        @Html.RadioButton("units", item.Id_подразделения)

                    </td>
                </tr>


            }
            <tr><td><br /><br /><input type="submit" value="Далее" /> </td><td></td></tr>

        </table>
    </form>
        <form method="post" action="~/Home/Menu">
            <input type="hidden" value="otchet" name="Login" />
            <input type="hidden" value="otchet12345" name="Password" />
            <input type="submit" value="В меню" />

        </form>
        }
